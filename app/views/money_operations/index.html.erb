<div class="top_panel">
  <h1>Список операций</h1>
  <%= form_for money_operations_path, id: "money_operations", method: "get" do |f| %>
    <%= render "shared/select_period", select_period: @select_period, period: @date_from..Date.today, title: "Период:", allow_change_end_date: false %>
    <div class="inline">
      <div class="inline-block">
        <%= check_box_tag("operation_type[spend]", @operation_type[:spend], @operation_type[:spend]) %>
        <%= label_tag("operation_type[spend]", "Показывать траты") %><br>
        <%= check_box_tag("operation_type[income]", @operation_type[:income], @operation_type[:income]) %>
        <%= label_tag("operation_type[income]", "Показывать поступления") %>
      </div>
      <%= f.submit "Показать", class: "action_button" %>
    </div>
  <% end %>

</div>

<% if @operations.present? %>
  <%= render "money_operations/list", operations: @operations %>
<% else %>

<% end %>
